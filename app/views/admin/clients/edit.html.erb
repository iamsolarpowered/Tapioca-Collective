<h1>Editing client</h1>

<% form_for([:admin, @client],
            :url => admin_client_path(@client),
            :html => {:method => :put}) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => 'form', :locals => {:f => f} %>

  <p>
    <%= f.submit 'Update', :class => 'submit' %>
  </p>
<% end %>

<%= link_to 'Show', admin_client_path(@client) %> |
<%= link_to 'Back', admin_clients_path %>
